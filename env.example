# WordPress REST API Credentials
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Your WordPress site URL (no trailing slash)
WP_SITE_URL=https://your-site.com

# WordPress admin username
WP_USERNAME=your_admin_username

# WordPress Application Password (NOT your regular WordPress password)
# Generate this in: WordPress Admin → Users → Your Profile → Application Passwords
# Format: xxxx xxxx xxxx xxxx xxxx xxxx (with spaces)
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# Optional: Test mode (set to true to validate without publishing)
DRY_RUN=true

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ---------------------------
# SEO planning / measurement (optional)
# ---------------------------

# Google Sheets planning spreadsheet ID (the long ID in the Sheet URL)
SEO_SPREADSHEET_ID=

# Google service account JSON key file (absolute path)
# Example:
# GOOGLE_APPLICATION_CREDENTIALS=/abs/path/to/google-service-account.json
GOOGLE_APPLICATION_CREDENTIALS=

# Google Search Console property (domain property recommended)
# Example:
# GSC_SITE_URL=sc-domain:example.com
GSC_SITE_URL=

# GA4 numeric property id (optional)
GA4_PROPERTY_ID=

# Brand terms to exclude from query lists (comma-separated)
# Example: BRAND_TERMS=brandname,brand name
BRAND_TERMS=

# DataForSEO credentials (optional; only needed for DataForSEO scripts)
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=
DATAFORSEO_LOCATION_CODE=2840
DATAFORSEO_LANGUAGE_CODE=en

# Optional URLs used by plan/brief checklist generators (client-specific)
CTA_PRIMARY_URL=
CTA_SECONDARY_URL=

# Optional paths for SEO scripts (defaults are relative to repo root)
SEMRUSH_OTI_DIR=work/seo/semrush
SEO_PLAN_DIR=work/seo/plan