# WordPress REST API Credentials
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Your WordPress site URL (no trailing slash)
WP_SITE_URL=https://your-site.com

# WordPress admin username
WP_USERNAME=your_admin_username

# WordPress Application Password (NOT your regular WordPress password)
# Generate this in: WordPress Admin → Users → Your Profile → Application Passwords
# Format: xxxx xxxx xxxx xxxx xxxx xxxx (with spaces)
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# Optional: Test mode (set to true to validate without publishing)
DRY_RUN=false

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
